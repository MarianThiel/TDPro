<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TowerUpgradeActivity"
    android:background="@mipmap/background"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/money"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="100$"
            android:textColor="#FFFF00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message"
            android:layout_width="125dp"
            android:layout_height="186dp"
            android:layout_marginStart="4dp"
            android:textColor="#FFFF00"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="66dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            android:text="Buy"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
            app:layout_constraintStart_toEndOf="@+id/message"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="474dp"
            android:layout_height="337dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/tower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/tower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <ImageButton
                android:id="@+id/damage1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/damage"
                app:layout_constraintBottom_toTopOf="@+id/damage2"
                app:layout_constraintEnd_toStartOf="@+id/weit1"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <ImageButton
                android:id="@+id/damage3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/damage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/weit3" />

            <ImageButton
                android:id="@+id/damage2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/damage"
                app:layout_constraintBottom_toTopOf="@+id/damage3"
                app:layout_constraintEnd_toStartOf="@+id/weit2" />

            <ImageButton
                android:id="@+id/weit1"
                android:layout_width="100dp"
                android:layout_height="90dp"

                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/range"
                app:layout_constraintBottom_toTopOf="@+id/weit2"
                app:layout_constraintEnd_toStartOf="@+id/speed1" />

            <ImageButton
                android:id="@+id/weit3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/range"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/speed3" />

            <ImageButton
                android:id="@+id/weit2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/range"
                app:layout_constraintBottom_toTopOf="@+id/weit3"
                app:layout_constraintEnd_toStartOf="@+id/speed2" />

            <ImageButton
                android:id="@+id/speed3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/speed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/speed2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/speed"
                app:layout_constraintBottom_toTopOf="@+id/speed3"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/speed1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/speed"
                app:layout_constraintBottom_toTopOf="@+id/speed2"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/tower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Tower1"
                android:textColor="#FFFF00"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Tower2"
                android:textColor="#FFFF00"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Tower3"
                android:textColor="#FFFF00"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>