<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".activity.AbilityUpgradeActivity">


    <ImageButton
        android:id="@+id/returnFromAbility"
        android:layout_width="92dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/messageFromAbility"
        android:layout_width="212dp"
        android:layout_height="84dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textColor="#FFEA00"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonbuy"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/buttonbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Buy"
        app:layout_constraintStart_toEndOf="@+id/returnFromAbility"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="404dp"
        android:layout_height="513dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/forestfriend2"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/deathschroud"
            app:layout_constraintBottom_toTopOf="@+id/imageButton4"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/interference3"
            app:layout_constraintBottom_toTopOf="@+id/imageButton6"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/interference3"
            app:layout_constraintBottom_toTopOf="@+id/imageButton9"
            app:layout_constraintStart_toEndOf="@+id/imageButton5"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/interference3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton8"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/interference"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="24dp"

            android:text="Interference"
            android:textColor="#FFEA00"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            app:layout_constraintStart_toEndOf="@+id/forestfriend" />

        <TextView
            android:id="@+id/forestfriend"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="24dp"

            android:text="Forest Friend"
            android:textColor="#FFEA00"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2"
            app:layout_constraintStart_toEndOf="@+id/deathschroud" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/deathschroud"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/deathschroud"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:text="Death Shroud"
            android:textColor="#FFEA00"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/forestfriend2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton7"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/deathschroud"
            app:layout_constraintBottom_toTopOf="@+id/imageButton7"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/forestfriend2"
            app:layout_constraintBottom_toTopOf="@+id/imageButton8"
            app:layout_constraintStart_toEndOf="@+id/imageButton4"
            tools:ignore="SpeakableTextPresentCheck" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>