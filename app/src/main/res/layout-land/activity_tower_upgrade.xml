<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TowerUpgradeActivity"
    android:background="@mipmap/background"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/damage1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/damage"
            app:layout_constraintEnd_toStartOf="@+id/damage2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/damage3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/damage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/weit3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/range"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speed3"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/weit2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/range"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/weit3"
            app:layout_constraintTop_toBottomOf="@+id/speed2"
            app:layout_constraintVertical_bias="0.947" />

        <ImageButton
            android:id="@+id/weit1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button1"

            android:contentDescription="@string/app_name"
            android:src="@mipmap/range"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/weit2"
            app:layout_constraintTop_toBottomOf="@+id/speed1"
            app:layout_constraintVertical_bias="0.928" />

        <ImageButton
            android:id="@+id/speed3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/speed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/damage3" />

        <ImageButton
            android:id="@+id/speed2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/speed"
            app:layout_constraintEnd_toStartOf="@+id/speed3"
            app:layout_constraintTop_toBottomOf="@+id/damage2" />

        <ImageButton
            android:id="@+id/speed1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/speed"
            app:layout_constraintEnd_toStartOf="@+id/speed2"
            app:layout_constraintTop_toBottomOf="@+id/damage1" />

        <ImageButton
            android:id="@+id/damage2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button1"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/damage"
            app:layout_constraintEnd_toStartOf="@+id/damage3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/money"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="100$"
            android:textColor="#FFFF00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message"
            android:layout_width="189dp"
            android:layout_height="136dp"
            android:layout_marginTop="68dp"
            android:textColor="#FFFF00"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/speed1"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:text="Buy"
            app:layout_constraintEnd_toStartOf="@+id/damage1"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>